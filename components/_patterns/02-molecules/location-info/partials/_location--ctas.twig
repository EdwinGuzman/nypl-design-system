{% if cta__link__url %}
  {% include "@atoms/links/link/link.twig" with {
    link_blockname: cta__link__blockname,
    link_base_class: 'cta',
    link_modifiers: cta__link_modifiers|default(['secondary']),
    link_content: cta__link__text,
    link_url: cta__link__url,
  } %}
{% else %}
  {% include "@atoms/text/text/text.twig" with {
    text_blockname: cta__alt_text__blockname,
    text_base_class: 'cta-alternate-text',
    text_content: cta__link__alternate_text,
  } %}
{% endif %}
